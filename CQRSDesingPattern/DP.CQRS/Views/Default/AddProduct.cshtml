@using DP.CQRS.CQRSPattern.Commands;
@model CreateProductCommand;
@{
	Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<form method="post">
	<label>Ürün Adı</label>
	<input type="text" class="form-control" asp-for="Name" />
	<br />
	<label>Stok</label>
	<input type="text" class="form-control" asp-for="Stock" />
	<br />
	<label>Fiyatı</label>
	<input type="text" class="form-control" asp-for="Price" />
	<br />
	<label>Açıklama</label>
	<input type="text" class="form-control" asp-for="Description" />
	<br />
	<button class="btn btn-danger">Ürün Ekle</button>
</form>