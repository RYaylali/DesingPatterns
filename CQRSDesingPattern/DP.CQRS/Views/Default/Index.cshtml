@using DP.CQRS.CQRSPattern.Results;
@model List<GetProductQueryResult>
@{
	Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
	<br />
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Ürün Adı</th>
			<th>Fiyat</th>
			<th>Stok</th>
			<th>Getir</th>
			<th>Güncelle</th>
			<th>Sil</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.ProductID</td>
				<td>@item.ProductName</td>
				<td>@item.Price</td>
				<td>@item.Stock</td>
				<td><a href="/Default/GetProduct/@item.ProductID" class="btn btn-primary">Getir</a></td>
				<td><a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-primary">Güncelle</a></td>
				<td> <a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-primary">Sil</a></td>

			</tr>
		}
	</table>
	<a href="/Default/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>