@using DP.FacadeDesignPattern.DAL;
@model Customer
@{
    ViewData["Title"] = "AddNewCustomer";
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<h1>AddNewCustomer</h1>
<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" asp-for="CustomerName" class="form-control" />
    <br
    <label>Müşteri Sayadı</label>
    <input type="text" asp-for="CustomerSurname" class="form-control" />
    <br />
    <label>Müşteri Adresi</label>
    <input type="text" asp-for="CustomerAddress" class="form-control" />
    <br />
     <label>Müşteri Şehri</label>
    <input type="text" asp-for="CustomerCity" class="form-control" />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
